{
  "manifest_version": 3,
  "name": "Chrome元素截圖工具",
  "version": "1.0.0",
  "description": "選擇網頁元素進行截圖，支援普通截圖和長截圖功能",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "downloads",
    "scripting"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/content.js"
      ],
      "css": [
        "styles/content.css"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "dist/popup.html",
    "default_title": "元素截圖工具",
    "default_icon": {
      "16": "dist/icons/icon16.png",
      "32": "dist/icons/icon32.png",
      "48": "dist/icons/icon48.png",
      "128": "dist/icons/icon128.png"
    }
  },
  "options_page": "public/options.html",
  "icons": {
    "16": "dist/icons/icon16.png",
    "32": "dist/icons/icon32.png",
    "48": "dist/icons/icon48.png",
    "128": "dist/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "styles/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}